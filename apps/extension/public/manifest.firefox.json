{
  "manifest_version": 3,
  "name": "Detach",
  "version": "0.1.0",
  "description": "A browser extension to gently interrupt doomscrolling.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.reddit.com/*",
        "*://*.facebook.com/*",
        "*://*.instagram.com/*",
        "*://*.tiktok.com/*",
        "*://*.youtube.com/*"
      ],
      "js": ["content.js", "overlayInjector.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "detach@extension",
      "strict_min_version": "109.0"
    }
  }
}
