{
  "manifest_version": 3,
  "name": "Detach",
  "version": "0.1.0",
  "description": "A browser extension to gently interrupt doomscrolling.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "browser-specific-settings": {
    "gecko": {
      "id": "detach@extension",
      "strict_min_version": "109.0"
    }
  }

}
